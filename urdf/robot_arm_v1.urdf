<?xml version="1.0"?>
<robot name="robot_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="robot_footprint" />

    <link name="base">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.50 0.50 0.20" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.50 0.50 0.20" />
            </geometry>
        </collision>
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
    </link>

    <joint name="robot_footprint_base" type="fixed">
        <origin xyz="0.0 0.0 0.10" rpy="0.0 0.0 0.0" />
        <parent link="robot_footprint" />
        <child link="base" />
    </joint>

    <joint name="base_to_base_link" type="continuous">
        <parent link="base" />
        <child link="base_link" />
        <origin xyz="0 0 0.15" rpy="0 0 0" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="shoulder">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 1.573 0.0" />
            <geometry>
                <box size="0.6 0.1 0.1" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.45 0.0 0.0" rpy="0.0 1.573 0.0" />
            <geometry>
                <box size="0.6 0.1 0.1" />
            </geometry>
        </collision>
    </link>

    <joint name="shoulder_to_base_link" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="shoulder" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="-1.573" upper="1.573" effort="1.0" velocity="1.0" />
    </joint>


    <link name="elbow">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 1.573 0.0" />
            <geometry>
                <box size="0.6 0.1 0.1" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.45 0.0 0.0" rpy="0.0 1.573 0.0" />
            <geometry>
                <box size="0.6 0.1 0.1" />
            </geometry>
        </collision>
    </link>

    <joint name="elbow_to_shoulder" type="revolute">
        <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0" />
        <parent link="shoulder" />
        <child link="elbow" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="-1.573" upper="1.573" effort="0.0" velocity="0.0" />
    </joint>

    <link name="wrist">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.0 0.0 0.0"/>
            </geometry>
        </collision>
    </link>

    <joint name="wrist_to_elbow" type="revolute">
        <origin xyz="0.0 0.0 0.55" rpy="0.0 0.0 0.0"/>
        <parent link="elbow"/>
        <child link="wrist"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-1.573" upper="1.573" effort="0.0" velocity="0.0"/>
    </joint>

</robot>